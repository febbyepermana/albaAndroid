<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:paddingBottom="16dp"
    tools:context=".Activity.TestFragment">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Mulai Test"
    android:textSize="22dp"
    android:textStyle="bold"
    android:layout_centerHorizontal="true"
    android:id="@+id/t_judul"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama : "
        android:textSize="20dp"
        android:id="@+id/t_nama"
        android:layout_below="@+id/t_judul"
        android:layout_marginTop="33dp"
        android:layout_alignParentLeft="true"/>

    <Spinner
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/sp_nama"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/t_judul"
        android:layout_marginTop="35dp"
        android:layout_toRightOf="@+id/t_nama"
        />

    <TextView
        android:id="@+id/t_tes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jenis Test :"
        android:textSize="20dp"
        android:layout_below="@+id/t_nama"
        android:layout_marginTop="20dp"/>
    <Spinner
        android:id="@+id/sp_tes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/sp_nama"
        android:layout_toRightOf="@+id/t_tes"/>

    <Button
        android:id="@+id/btn_mulaitest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mulai Test"
        android:layout_below="@+id/t_tes"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>